local ut = {
	EnergyPistolsShootSoundCooldown = 0;
}

-- // Services

local SoundService_upvr = game:GetService("SoundService")

-- // Main

function debris(thing, dur)
	task.delay(dur, function()
		if thing then
			thing:Destroy()
		end
	end)
end

local animlib = getgenv().animLib

local plr = game:GetService('Players').LocalPlayer
local scripts = plr.PlayerScripts
local weaponSounds = scripts.Modules.ClientReplicatedClasses.ClientFighter.ClientItem

-- // Globals

getgenv().ffunc = function(name, anim, dur)
	if anim and not table.find(getgenv().silenced, anim) then
		local stopped = false

		local z = anim.Stopped:Once(function()
			stopped = true
		end)

		local waitResult = wait(dur)
		if z then z:Disconnect() end
		return anim and anim.IsPlaying and not stopped and not table.find(getgenv().silenced, anim) and waitResult
	end
end

getgenv().durr = .92
getgenv().silenced = getgenv().silenced or {}
getgenv().si = getgenv().si or {}
getgenv().soundToWeapon = getgenv().soundToWeapon or {}

-- // Functions

function ut:_AnimationWait(name, anim, dur)
	return getgenv().ffunc(name, anim, dur)
end

function ut:CreateSound(id, vol, speed, pos, play, dur, mind, maxd, soundserv, extra)
	local s = Instance.new("Sound")
	s.SoundId = typeof(id) == 'table' and id.id or id
	s.Volume = vol or 1
	s.PlaybackSpeed = speed or 1
	s.RollOffMinDistance = mind and typeof(mind) == 'number' and mind or 50
	s.RollOffMaxDistance = maxd or 400
	s.RollOffMode = Enum.RollOffMode.Inverse
	s.SoundGroup = SoundService_upvr[soundserv or 'Other']

	if extra then
		for i, v in pairs(extra) do
			s[i] = v
		end
	end

	getgenv().soundToWeapon[s] = id.model

	s:AddTag('IsOurs')
	s.Parent = weaponSounds

	s:Play()

	s.Ended:Once(function()
		wait(1)
		s:Destroy()
	end)

	return s
end

function ut:CreateSpectatorSound(id, vol, speed, pos, play, dur, mind, maxd, soundserv, extra)
	local s = Instance.new("Sound")
	s.SoundId = typeof(id) == 'table' and id.id or id
	s.Volume = vol or 1
	s.PlaybackSpeed = speed or 1
	s.RollOffMinDistance = mind and typeof(mind) == 'number' and mind or 50
	s.RollOffMaxDistance = maxd or 400
	s.RollOffMode = Enum.RollOffMode.Inverse
	s.SoundGroup = SoundService_upvr[soundserv or 'Other']

	if extra then
		for i, v in pairs(extra) do
			s[i] = v
		end
	end

	getgenv().soundToWeapon[s] = id.model

	s:AddTag('IsOurs')
	s.Parent = weaponSounds

	s:Play()

	s.Ended:Once(function()
		wait(1)
		s:Destroy()
	end)

	return s
end

return ut
